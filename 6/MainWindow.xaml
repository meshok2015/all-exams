
<Window x:Class="SystemInfoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Info" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Memory Info">
                <DataGrid x:Name="MemoryDataGrid" AutoGenerateColumns="True" />
            </TabItem>
            <TabItem Header="Processes Info">
                <DataGrid x:Name="ProcessDataGrid" AutoGenerateColumns="True" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
   